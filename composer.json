{
    "name": "decodelabs/typify",
    "description": "Mime type detection tools",
    "type": "library",
    "keywords": [ "mime", "content", "detection" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",

        "decodelabs/exceptional": "^0.5",
        "decodelabs/veneer": "^0.12.1"
    },
    "require-dev": {
        "decodelabs/phpstan-decodelabs": "^0.7",
        "decodelabs/clip": "^0.5",
        "decodelabs/commandment": "^0.1.1"
    },
    "conflict": {
        "decodelabs/clip": "<0.5"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Typify\\": "src/"
        },
        "files": [
            "src/Detector.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "DecodeLabs\\Commandment\\Action\\": "tasks/"
        }

    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.3.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
